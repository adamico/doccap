<%= form_for [:admin, @coordonnee], html: {class: "form-horizontal", role: "form"} do |f| %>
  <%= render "application/form_errors", model: @coordonnee %>

  <div class="form-group">
    <%= f.label :libelle, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :libelle, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.cktext_area :content %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :coord_category_id, "Type", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.collection_select :coord_category_id, CoordCategory.asc(:name).all, :id, :name, {}, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Enregistrer", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

<div class="clearfix">&nbsp;</div>

