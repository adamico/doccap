<h1><%= "#{t('.index')} des pages" %></h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Parent</th>
      <th>Etat</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.name %></td>
      <td><%= page.parent %></td>
      <td><%= t "activerecord.attributes.page.stats.#{page.state}" %></td>
      <td>
        <div class="btn-group">
          <%= link_to t(".preview"), nested_page_path(page), class: "btn" %>
          <%= link_to t(".edit"), edit_admin_page_path(page), class: "btn" if can?(:update, page) %>
          <%= link_to t(".destroy"), [:admin, page], method: :delete,
          data: { confirm: 'Etes-vous sÃ»r ?' }, class: "btn" if can?(:destroy, page) %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to t(".new") + " Page", new_admin_page_path, class: "btn btn-success" if can?(:create, :pages) %></p>
