<%= form_for([:admin, user], html: {class: "form-horizontal", role: "form"}) do |f| %>
  <%= render "application/form_errors", model: user %>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, "Mot de passe", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmer", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
  </div>

  <% unless f.object.new_record? %>
    <div class="form-group">
      <%= f.label :current_password, "Mot de passe actuel", class: "col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%= f.password_field :current_password, class: "form-control" %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "Enregistrer", class: "btn btn-success" %>
  </div>
<% end %>
