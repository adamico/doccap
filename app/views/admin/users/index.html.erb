<% if params[:approved]
  page_title = "non approuvés"
  filter_link = content_tag :p, link_to("Lister tous les utilisateurs", admin_users_path, class: "btn")
else
  page_title = ""
  filter_link = content_tag :p, link_to("Lister les utilisateurs non approuvés", admin_users_path(approved: false), class: "btn") if User.where(approved: false).any?
end %>

<h1><%= "Liste utilisateurs #{page_title}" %></h1>

<p><%= filter_link %></p>

<table class="table table-condensed table-striped users">
  <thead>
    <tr>
      <th>Email</th>
      <th>Approbation</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <%= content_tag_for :tr, user do %>
        <td><%= user.email %></td>
        <td><%= t "default.#{user.approved}" %></td>
        <td>
          <div class="btn-group">
            <%= link_to "Approuver", approve_admin_user_path(user), method: :put, class: "btn btn-info" unless user.approved? %>
            <%= link_to "Modifier", edit_admin_user_path(user), class: "btn btn-warning" %>
            <%= link_to "Détruire", [:admin, user], method: :delete, data: {confirm: 'Etes-vous sûr ?'}, class: "btn btn-danger" if can?(:destroy, user) %>
          </div>
        </td>
      <% end %>
    <% end %>
  </tbody>
</table>
