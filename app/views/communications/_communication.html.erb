<tr class=<%= communication.published? ? (communication.fichier_url.present? ? "" : "warning") : "danger" %>>
  <td><%= link_to communication.title, communication %></td>
  <td><%= l communication.publication %></td>
  <td><%= communication.category %></td>
  <td><%= communication.tag_list %></td>
  <td><%= link_to communication.fichier_name, communication.fichier_url, target: "_BLANK" if communication.fichier_url %></td>
  <td>
    <div class="btn-group">
      <%= link_to 'Modifier', edit_admin_communication_path(communication), class: "btn btn-warning btn-sm" if policy(communication).update? %>
      <%= link_to 'Détruire', [:admin, communication], method: :delete, data: { confirm: 'Etes-vous sûr ?' }, class: "btn btn-danger btn-sm" if policy(communication).destroy? %>
    </div>
  </td>
</tr>
