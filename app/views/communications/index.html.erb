<h1>Liste documents</h1>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Titre</th>
      <th>Publié le</th>
      <th>Mots clés</th>
      <th>Fichier</th>
      <th>&nbsp;</th>
    </tr>
  </thead>

  <tbody>
    <% @communications.each do |communication| %>
      <tr>
        <td><%= communication.titre %></td>
        <td><%= l communication.publication %></td>
        <td><%= communication.tags %></td>
        <td><%= link_to communication.fichier_file_name, communication.fichier.url(download: true) if communication.fichier.present? %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Edit', edit_communication_path(communication), class: "btn btn-warning btn-sm" if can?(:update, communication) %>
            <%= link_to 'Destroy', communication, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" if can?(:destroy, communication) %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Nouveau document', new_communication_path, class: "btn btn-primary" if can?(:create, :communications) %>
