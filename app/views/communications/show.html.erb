<p>
  <strong>Titre :</strong>
  <%= @communication.titre %>
</p>

<p>
  <% if @communication.has_fichier_upload? %>
    <strong>Fichier :</strong>
    <%= link_to @communication.fichier.path, @communication.fichier.url %>
  <% else %>
  <% end -%>
</p>

<div class="btn-group">
  <%= link_to 'Edit', edit_communication_path(@communication), class: "btn btn-warning" if can?(:update, @communication) %>
  <%= link_to 'Destroy', @communication, method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger" if can?(:destroy, @communication) %>
  <%= link_to 'Back', communications_path, class: "btn btn-default" %>
</div>
