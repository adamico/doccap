<h2><%= @coordonnee.libelle %></h2>

<p>
  <strong>Catégorie : </strong><%= @coordonnee.coord_category %>
</p>

<%= simple_format @coordonnee.content %>

<div class="btn-group">
  <%= link_to 'Modifier', edit_coordonnee_path(@coordonnee), class: "btn btn-warning" if can?(:update, @coordonnee) %>
  <%= link_to 'Détruire', @coordonnee, method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger" if can?(:destroy, @coordonnee) %>
  <%= link_to 'Voir la liste', coordonnees_path, class: "btn btn-default" %>
</div>
