<h1>DocCAP</h1>

<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <h2>Recherche documents du service</h2>
    <%= form_tag search_path, method: :get, class: "form-inline", remote: true do %>
      <div class="form-group">
        <%= label_tag :query, "Mot clé", class: "sr-only" %>
        <%= text_field_tag :query, "", class: "form-control", placeholder: "saisir mot(s)-clé(s)" %>
      </div>

      <%= submit_tag "OK", class: "btn btn-default" %>
    <% end -%>
    <div id="search_results">
    </div>
  </div>
  <div class="col-md-5 col-md-offset-1">
    <h2>Annuaire coordonnées utiles</h2>
  </div>
</div>
