<h1><%=  @page.name %></h1>

<% if @page.draft? %>
  <p class="text-warning">Cette page n'a pas été publiée.</p>
<% end -%>

<%= simple_format @page.content %>

<div class="btn-group">
  <%= link_to 'Modifier', edit_admin_page_path(@page), class: "btn btn-warning" if can?(:edit, @page) %>
  <%= link_to 'Détruire', [:admin, @page], method: :delete, data: {confirm: "Etes-vous sûr ?"}, class: "btn btn-danger" if can?(:destroy, @page) %>
</div>
