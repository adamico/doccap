<h1>Recherche documents du service</h1>
<%= link_to "Voir la liste complète", admin_communications_path, class: "btn btn-info" %>
<hr />
<%= form_tag search_path, method: :get, class: "form-inline", id: "search", remote: true do %>
  <div class="form-group">
    <%= label_tag :query, "Mot clé", class: "sr-only" %>
    <%= text_field_tag :query, "", class: "form-control", placeholder: "saisir mot(s)-clé(s)", autofocus: true %>
  </div>

  <%= submit_tag "OK", class: "btn btn-default" %>
  <span id="search_spinner"><%= image_tag "ajax-loader.gif" %></span>
<% end -%>
<div id="search_results"></div>
<div id="search_logger"></div>
